generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
  directUrl =env("POSTGRES_URL")
}

model WouldYouRatherMain {
  id        String                   @id @default(cuid())
  title     String
  question  WouldYouRatherQuestion[]
  createdAt DateTime                 @default(now())
  updatedAt DateTime                 @updatedAt
}

model WouldYouRatherQuestion {
  id                   String             @id @default(cuid())
  optionOne            String
  optionTwo            String
  wouldYouRatherMainId String
  wouldYouRatherMain   WouldYouRatherMain @relation(fields: [wouldYouRatherMainId], references: [id])
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
}
